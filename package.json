{
  "name": "iotp",
  "version": "1.0.0",
  "description": "PANTOhealth IoT X-Ray Data Platform",
  "private": true,
  "packageManager": "yarn@4.0.0",
  "scripts": {
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "lint": "eslint \"{src,apps,libs,test,e2e}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test,e2e}/**/*.ts\"",
    "format": "prettier --write \"{src,apps,libs,test,e2e}/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"{src,apps,libs,test,e2e}/**/*.{ts,js,json,md}\"",
    "dev:api": "nest start api --watch --preserveWatchOutput",
    "dev:signals": "nest start signals --watch --preserveWatchOutput",
    "dev:producer": "nest start producer --watch --preserveWatchOutput",
    "start:api": "nest start api",
    "start:signals": "nest start signals",
    "start:producer": "nest start producer",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest --testPathPatterns=apps/api",
    "test:signals": "jest --testPathPatterns=apps/signals",
    "test:producer": "jest --testPathPatterns=apps/producer",
    "test:e2e": "jest --config e2e/jest-e2e.config.js",
    "test:docker:setup": "docker-compose -f docker-compose.test-full.yml up -d",
    "test:docker:teardown": "docker-compose -f docker-compose-full.test.yml down -v",
    "test:docker:logs": "docker-compose -f docker-compose-full.test.yml logs -f",
    "docker:up": "docker-compose -f docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "infra:up": "docker-compose -f docker/docker-compose.infrastructure.yml up -d",
    "infra:down": "docker-compose -f docker/docker-compose.infrastructure.yml down",
    "infra:logs": "docker-compose -f docker/docker-compose.infrastructure.yml logs -f",
    "script:create-indexes": "ts-node scripts/create-indexes.ts",
    "script:test-indexes": "ts-node scripts/test-indexes.ts"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/ajv": "^1.0.4",
    "@types/amqplib": "^0.10.7",
    "@types/express": "^4.17.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/node-fetch": "2",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.0.5",
    "mongodb-memory-server": "^10.2.0",
    "node-fetch": "2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^5.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/terminus": "^10.0.0",
    "@opentelemetry/api": "1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.44.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.48.0",
    "@opentelemetry/sdk-node": "^0.48.0",
    "@types/ioredis": "^5.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "dotenv": "^17.2.1",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.7.0",
    "joi": "^18.0.0",
    "minio": "^7.1.0",
    "mongodb": "^6.0.0",
    "mongoose": "^8.0.0",
    "pino": "^8.0.0",
    "pino-pretty": "^10.0.0",
    "prom-client": "^15.0.0",
    "redis": "^4.6.0",
    "reflect-metadata": "~0.2.2",
    "rxjs": "^7.8.0"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ]
}
